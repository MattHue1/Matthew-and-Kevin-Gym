html
    head
        title DashBoard
        link(rel="stylesheet" type="text/css" href="/styles.css")
    body
        include ../views/header
        
        div#left(class = "column left")
        div#middle(class = "column middle")
            h6 Avilable Classes:
            each item in data
                div.cart
                    h3 Trainer: #{item.trainer_name}
                    h3 Trainer Specialty: #{item.trainer_specialty}
                    h3 Date: #{item.date}
                    h3 Time: #{item.time}
                    h3 Cost: $#{item.class_fee.toFixed(2)}
                    div.button1
                        button#join(type = "button" onclick=`join('${item.class_id}', '${item.time}', ${item.class_fee})`) Join Class
                
            h6 Enroll Class:
            each item in enroll 
                div.stats
                    h3 Trainer: #{item.trainer_name}
                    h3 Trainer Specialty: #{item.trainer_specialty}
                    h3 Date: #{item.date}
                    h3 Time: #{item.time}
                    h3 Cost: $#{item.class_fee.toFixed(2)}
            
        div#right(class = "column right")
           
        script(src="/dash.js")